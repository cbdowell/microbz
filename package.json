{
    "private": true,
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cbdowell/microbz.git"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "clean": "rimraf packages/**/lib",
        "compile": "lerna exec -- npm run compile",
        "lint": "prettier-check --ignore-path .gitignore \"{docs/{,source/**},.,packages/**,test}/{*.js,*.ts,*.md}\"",
        "lint-fix": "prettier --write --ignore-path .gitignore \"{docs/{,source/**},.,packages/**,test}/{*.js,*.ts,*.md}\"",
        "prebootstrap": "npm install",
        "postinstall": "lerna bootstrap",
        "pretest": "npm run compile",
        "test": "jest",
        "posttest": "npm run lint",
        "release": "lerna publish",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "*.ts": [
            "prettier --write",
            "git add"
        ],
        "*.js": [
            "prettier --write",
            "git add"
        ],
        "*.md": [
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "@types/node": "^10.1.1",
        "husky": "^0.14.3",
        "jest": "^22.4.4",
        "jest-cli": "^22.4.4",
        "lerna": "^2.11.0",
        "lint-staged": "^7.1.1",
        "prettier": "^1.12.1",
        "prettier-check": "^2.0.0",
        "rimraf": "^2.6.2",
        "typescript": "^2.8.3"
    }
}
